{
  "name": "Your game",
  "minPlayers": 1,
  "maxPlayers": 4,
  "ui": {
    "root": ".",
    "build": "npm run build:ui",
    "watchPaths": [
      "node_modules/boardzilla/ui",
      "node_modules/boardzilla/game",
      "ui/src",
      "game/src"
    ],
    "outDir": "ui/build"
  },
  "game": {
    "root": ".",
    "build": "npm run build:game",
    "watchPaths": [
      "node_modules/boardzilla/game",
      "game/src"
    ],
    "out": "game/build/game-interface.js"
  }
}
